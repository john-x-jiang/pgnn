{
    "exp_name": "demo",
    "exp_id": "00",
    
    "model": {
        "type": "ST_GCNN",
        "args": {
            "num_channel": [
                1,
                16,
                32,
                64,
                128,
                256,
                1024
            ],
            "num_sequence": [
                101,
                80,
                60,
                40,
                20
            ],
            "latent_feature": 30,
            "latent_sequence": 20
        }
    },

    "data":{
        "data_set": "HeartDataLoader",
        "data_dir": "data/",
        "data_names": ["EC"],
        "signal_type": "egm",
        "num_meshes": [568],
        "seq_len": 101,
        "graph_method": "bipartite",
        "num_workers": 1
    },

    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 5e-4,
            "amsgrad": false,
            "betas": [0.9, 0.999]
        }
    },
    "lr_scheduler": 0,

    "loss": "mse_loss",
    "metrics": [
        "mse"
    ],

    "batch_size": 16,
    "ecgi": 1,
    "device": 0,
    "training": {
        "epochs": 500,
        "overfit_single_batch": false,

        "save_period": 10,

        "monitor": "min val_loss",
        "early_stop": 20,

        "torso_len": 120,

        "kl_args":{
            "is_kl": false,
            "min_annealing_factor": 0.0,
            "anneal_update": 1000,
            "elbo": "sum",
            "lambda": 10
        },
        "emission": "q"
    },
    "evaluating": {
        "torso_len": 120,
        "emission": "q"
    },
    
    "best_model": "m_best"
}
